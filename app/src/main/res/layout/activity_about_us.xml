    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="中成科技IDC机房"
        android:layout_margin="15dp"
        android:paddingLeft="20dp"
        android:textColor="#000000"
        />
    <com.block.xjfkchain.widget.autoscrollviewpager.BGABanner
        android:id="@+id/about_us_banner"
        android:layout_width="match_parent"
        android:layout_height="165dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:banner_indicatorGravity="bottom"
        app:banner_pageChangeDuration="1000"
        app:banner_pointAutoPlayAble="true"
        app:banner_pointContainerBackground="@android:color/transparent"
        app:banner_transitionEffect="alpha"
        />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:layout_marginTop="15dp"
    android:background="@drawable/bg_about_us"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="公司介绍"
        android:textSize="18sp"
        android:textColor="#000000"
        android:layout_marginTop="15dp"
        />
    <TextView
        android:id="@+id/about_us_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:text="@string/about_us_txt"
        android:layout_marginTop="5dp"
        android:textSize="13sp"
        android:lineSpacingExtra="8dp"
        android:padding="15dp"
        android:layout_marginBottom="15dp"
        />
</LinearLayout>

</LinearLayout>
