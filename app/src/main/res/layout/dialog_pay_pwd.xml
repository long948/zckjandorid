<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="329dp"
    android:layout_height="260dp"
    android:background="@drawable/dialog_pay_pwd_bg"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="37dp"
        android:text="请输入资金密码"
        android:textColor="#ffc2cefa"
        android:textSize="15sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="30dp">

        <EditText
            android:id="@+id/et_bank_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:hint="请输入资金密码"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:password="true"
            android:singleLine="true"
            android:textColor="#ff6075d7"
            android:textColorHint="#806075d7"
            android:textSize="13sp" />

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="#334E6EFF" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/iv_ok"
            android:layout_width="124dp"
            android:layout_height="48dp"
            android:layout_marginRight="5dp"
            android:src="@mipmap/pay_pwd_ok" />

        <LinearLayout
            android:layout_width="124dp"
            android:layout_height="48dp"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:padding="6dp">

            <ImageView
                android:id="@+id/iv_cancel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@mipmap/pay_pwd_cancel" />
        </LinearLayout>


    </LinearLayout>

</LinearLayout>