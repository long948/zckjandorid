<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="54dp"
        android:padding="10dp"
        android:src="@mipmap/login_back" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="53dp"
        android:text="请输入验证码"
        android:textColor="@color/black"
        android:textSize="19sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="2dp"
        android:text="请输入 +86 15901593377收到的验证码"
        android:textColor="#ff8390c3"
        android:textSize="10sp" />


    <com.jkb.vcedittext.VerificationCodeEditText
        android:id="@+id/et_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="15dp"
        android:inputType="number"
        android:textColor="#6075D7"
        android:textSize="22sp"
        android:textStyle="bold"
        app:bottomLineHeight="2dp"
        app:bottomLineNormalColor="@color/blue20"
        app:bottomLineSelectedColor="@color/blue20"
        app:figures="4"
        app:selectedBackgroundColor="@color/transparent"
        app:verCodeMargin="34dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:gravity="center_horizontal">


        <TextView
            android:id="@+id/tv_getcode"
            android:layout_width="180dp"
            android:layout_height="48dp"
            android:background="@drawable/login_getcode_bg"
            android:gravity="center"
            android:text="获取验证码"
            android:textColor="@color/login_getcode_btn_textcolor"
            android:textSize="13sp" />
    </LinearLayout>


</LinearLayout>