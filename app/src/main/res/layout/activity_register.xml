<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <ImageView
        android:layout_width="39dp"
        android:layout_height="2dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="85dp"
        android:background="@mipmap/login_div" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="3dp"
        android:text="账号注册"
        android:textColor="@color/black"
        android:textSize="17sp" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="48dp"
                android:layout_marginRight="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:text="账号"
                    android:textColor="#ff6075d7"
                    android:textSize="13sp" />

                <EditText
                    android:id="@+id/et_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@color/transparent"
                    android:hint="请输入手机号"
                    android:inputType="phone"
                    android:maxLength="11"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:singleLine="true"
                    android:textColor="#ff6075d7"
                    android:textColorHint="#806075d7"
                    android:textSize="13sp" />


            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="#334E6EFF" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:text="登陆密码"
                    android:textColor="#ff6075d7"
                    android:textSize="13sp" />

                <EditText
                    android:id="@+id/et_pwd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@color/transparent"
                    android:hint="请输登陆密码"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:password="true"
                    android:singleLine="true"
                    android:textColor="#ff6075d7"
                    android:textColorHint="#806075d7"
                    android:textSize="13sp" />

            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="#334E6EFF" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:text="确认密码"
                    android:textColor="#ff6075d7"
                    android:textSize="13sp" />

                <EditText
                    android:id="@+id/et_repwd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@color/transparent"
                    android:hint="请输登陆密码"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:password="true"
                    android:singleLine="true"
                    android:textColor="#ff6075d7"
                    android:textColorHint="#806075d7"
                    android:textSize="13sp" />

            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="#334E6EFF" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="11dp"
                android:layout_marginRight="15dp"
                android:gravity="right">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*密码长度6-20位字符"
                    android:textColor="#ff6075d7"
                    android:textSize="10sp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:text="邀请码"
                    android:textColor="#ff6075d7"
                    android:textSize="13sp" />

                <EditText
                    android:id="@+id/et_invite"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@color/transparent"
                    android:hint="必填"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:singleLine="true"
                    android:textColor="#ff6075d7"
                    android:textColorHint="#806075d7"
                    android:textSize="13sp" />

            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="#334E6EFF" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="16dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="12dp"
                            android:paddingBottom="12dp"
                            android:text="验证码"
                            android:textColor="#ff6075d7"
                            android:textSize="13sp" />

                        <EditText
                            android:id="@+id/et_code"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:background="@color/transparent"
                            android:hint="请输入验证码"
                            android:paddingTop="12dp"
                            android:paddingBottom="12dp"
                            android:singleLine="true"
                            android:textColor="#ff6075d7"
                            android:textColorHint="#806075d7"
                            android:textSize="13sp" />

                    </LinearLayout>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#334E6EFF" />

                </LinearLayout>


                <TextView
                    android:id="@+id/tv_getcode"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="获取验证码"
                    android:textColor="#ff6189ff"
                    android:textSize="13sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="15dp">

                <CheckBox
                    android:id="@+id/cb_protrol"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*已阅读并同意"
                    android:textColor="#ff4755a1"
                    android:textSize="10sp" />
                

                <TextView
                    android:id="@+id/tv_protocol_privacy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="隐私保护声明"
                    android:textColor="#229BFF"
                    android:textSize="10sp" />
            </LinearLayout>


            <ImageView
                android:id="@+id/iv_register"
                android:layout_width="match_parent"
                android:layout_height="87dp"
                android:layout_marginTop="55dp"
                android:background="@mipmap/register_btn" />


            <ImageView
                android:id="@+id/iv_login"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="9dp"
                android:layout_marginRight="12dp"
                android:layout_marginBottom="20dp"
                android:background="@mipmap/register_login" />

        </LinearLayout>


    </android.support.v4.widget.NestedScrollView>
</LinearLayout>